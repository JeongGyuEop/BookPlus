<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bookplus.API.mappers.BookMapper">

    <!-- 책 리스트 조회 쿼리 -->
    <select id="getBooksByTag" parameterType="string" resultType="string">
        SELECT book_name
        FROM books
        WHERE tag = #{tag}
    </select>

</mapper>
